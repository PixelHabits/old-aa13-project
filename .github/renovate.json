{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": ["config:base"],
	"baseBranches": ["dev"],
	"labels": ["dependencies"],
	"assignees": ["@PixelHabits"],
	"packageRules": [
		{
			"matchPackagePatterns": ["^@repo/"],
			"enabled": false
		}
	],
	"updateInternalDeps": true,
	"rangeStrategy": "bump",
	"automerge": true
}
